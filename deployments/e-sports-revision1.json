{
    "family": "e-sports-users",
    "executionRoleArn": "arn:aws:iam::692859914395:role/ecsTaskExecutionRole",
    "containerDefinitions": [
      {
        "name": "users-container",
        "image": "692859914395.dkr.ecr.us-east-2.amazonaws.com/assessment/e-sports:latest",
        "cpu": 512,
        "portMappings": [
          {
            "name": "users-container",
            "containerPort": 8080,
            "hostPort": 8080,
            "protocol": "tcp",
            "appProtocol": "http"
          }
        ],
        "essential": true,
        "environment": [
          {
            "name": "DB_USERS",
            "value": "${DB_USERS}"
          },
          {
            "name": "JWT_SECRET",
            "value": "${JWT_SECRET}"
          },
          {
            "name": "JWT_ISSUER",
            "value": "${JWT_ISSUER}"
          },
          {
            "name": "JWT_AUDIENCE",
            "value": "${JWT_AUDIENCE}"
          },
          {
            "name": "RABBIT_HOST",
            "value": "${HOST_RABBIT}"
          },
          {
            "name": "RABBIT_USERNAME",
            "value": "${USERNAME_RABBIT}"
          },
          {
            "name": "RABBIT_PASSWORD",
            "value": "${PASSWORD_RABBIT}"
          }
        ],
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/e-sports-users",
            "awslogs-region": "us-east-2",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "healthCheck": {
          "command": [
            "CMD-SHELL",
            "curl -f http://localhost:8080/swagger/v1/swagger.json || exit 1"
          ],
          "interval": 30,
          "timeout": 5,
          "retries": 3,
          "startPeriod": 0
        }
      }
    ],
    "requiresCompatibilities": [
      "FARGATE"
    ],
    "cpu": "1024",
    "memory": "2048",
    "runtimePlatform": {
      "cpuArchitecture": "X86_64",
      "operatingSystemFamily": "LINUX"
    },
    "networkMode": "awsvpc"
  }
  